<% // if(!locals.pageName){ locals.pageName = ''; } // 重構 refactoring
locals.pageName ||= ''; %>
<style>
  .navbar-nav .nav-link.active {
    background-color: blue;
    color: white;
    font-weight: 900;
    border-radius: 6px;
  }
</style>
<div class="container">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Navbar</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/json-sales"
              >json-sales</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= pageName==='ab_list' ? 'active' : '' %>"
              href="/address-book"
              >通訊錄列表</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= pageName==='ab_add' ? 'active' : '' %>"
              href="/address-book/add"
              >新增</a
            >
          </li>
        </ul>
        <ul class="navbar-nav mb-2 mb-lg-0">
          <% if(session.admin){ %>
          <li class="nav-item">
            <a class="nav-link"><%= session.admin.nickname %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/logout">登出</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/login">登入</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</div>
